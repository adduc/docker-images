ARG NAMESPACE="local"
ARG OS_VERSION="3.21"
ARG PLATFORM="amd64"
ARG PHP_VERSION="84"
ARG TAG_PREFIX=""
FROM ${NAMESPACE}/php-alpine:${TAG_PREFIX}${PHP_VERSION}-${OS_VERSION}-${PLATFORM}

ARG PHP_VERSION="84"
ARG DEBUG_PACKAGE="pecl-xdebug"

RUN apk add --no-cache php${PHP_VERSION}-${DEBUG_PACKAGE}
